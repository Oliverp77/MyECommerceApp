@model MyECommerceApp.Models.UserProfileViewModel;

<h2>Manage Your Profile</h2>

<form asp-action="UserIndex" method="post">
    <div class="form-container">
        <div class="form-group">
            <label asp-for="CurrentName">Current Name</label>
            <input asp-for="CurrentName" class="form-control" />
            <span asp-validation-for="CurrentName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewName">New Name</label>
            <input class="form-control" />
            <span asp-validation-for="NewName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentEmail"> Current Email</label>
            <input asp-for="CurrentEmail" class="form-control" />
            <span asp-validation-for="CurrentEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewEmail">New Email</label>
            <input class="form-control" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentPassword">Current Password</label>
            <input asp-for="CurrentPassword" class="form-control" type="password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword">New Password</label>
            <input class="form-control" type="password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}